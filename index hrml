  <h1>Token Presale</h1>

  <!-- MetaMask Bağla Butonu -->
  <button id="connectWallet">MetaMask Bağla</button>

  <!-- Satın Al Butonu (Bağlantı sonrası görünür) -->
  <div id="buySection" style="display: none;">
    <input type="number" id="tokenAmount" placeholder="Token miktarı">
    <button id="buyTokens">SATIN AL</button>
  </div>

  <script>
    const connectBtn = document.getElementById("connectWallet");
    const buySection = document.getElementById("buySection");
    const buyBtn = document.getElementById("buyTokens");
    let userAddress = null;

    // 1. MetaMask Bağlama
    connectBtn.addEventListener("click", async () => {
      if (window.ethereum) {
        try {
          // Kullanıcıyı MetaMask'e bağla (Mobilde otomatik deep link açar)
          const accounts = await window.ethereum.request({ method: "eth_requestAccounts" });
          userAddress = accounts[0];
          console.log("Bağlanan adres:", userAddress);
          
          // Satın al bölümünü göster
          buySection.style.display = "block";
          connectBtn.textContent = `Bağlı: ${userAddress.slice(0, 6)}...`;
          
          // Ağ kontrolü (Örneğin BSC için)
          const chainId = await window.ethereum.request({ method: "eth_chainId" });
          if (chainId !== "0x38") { // BSC Mainnet: 0x38
            alert("Lütfen Binance Smart Chain'e geçin!");
          }
        } catch (error) {
          console.error("Kullanıcı reddetti:", error);
        }
      } else {
        // MetaMask yüklü değilse mobil kullanıcıları yönlendir
        if (/Android|iPhone|iPad/i.test(navigator.userAgent)) {
          window.open("https://metamask.app.link/dapp/" + window.location.hostname, "_blank");
        } else {
          alert("Lütfen MetaMask yükleyin!");
        }
      }
    });

    // 2. Token Satın Alma Fonksiyonu
    buyBtn.addEventListener("click", async () => {
      if (!userAddress) {
        alert("Önce MetaMask bağlayın!");
        return;
      }

